<% include('layout', { body: null }) %>
<h2>Editar Contacto</h2>
<form action="/edit/<%= contacto.id %>" method="POST">
  <label>Nombres: 
    <input type="text" name="nombres" required value="<%= contacto.nombres %>">
  </label>
  <label>Apellidos: 
    <input type="text" name="apellidos" required value="<%= contacto.apellidos %>">
  </label>
  <label>Dirección: 
    <input type="text" name="direccion" required value="<%= contacto.direccion %>">
  </label>
  <label>Teléfono: 
    <input type="number" name="telefono" required value="<%= contacto.telefono %>">
  </label>
  <button type="submit">Actualizar</button>
</form>